<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />

            <stroke android:width="0dp" android:color="@android:color/darker_gray" />

            <corners android:radius="3dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <size android:height="10dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#cccccc" android:startColor="#cccccc" />

            <stroke android:width="1dp" android:color="@android:color/darker_gray" />

            <corners android:radius="3dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <size android:height="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />

            <corners android:radius="3dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <size android:height="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />
            <stroke android:width="1dp" android:color="#ffffff" />

            <corners android:radius="3dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <size android:height="10dp" />
        </shape>
    </item>

</selector>